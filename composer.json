{
  "name": "fortytwo-studio/craft-cms-boilerplate",
  "description": "This is a boilerplate for Craft CMS",
  "license": "MIT",
  "require": {
    "craftcms/aws-s3": "1.3.0",
    "craftcms/cms": "3.7.28",
    "craftcms/redactor": "2.8.8",
    "ether/seo": "3.7.4",
    "solspace/craft-freeform": "3.12.11",
    "spicyweb/craft-neo": "2.12.1",
    "supercool/buttonbox": "^2.0.4",
    "verbb/navigation": "1.4.23",
    "verbb/super-table": "2.7.1",
    "vlucas/phpdotenv": "^3.4.0",
    "wrav/oembed": "1.3.13"
  },
  "require-dev": {
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.3"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-install-cmd": [
      "./craft setup/security-key",
      "./craft setup/app-id",
      "./craft setup/db",
      "./craft db/restore ./storage/setup-boilerplate/default_db.sql",
      "npm install --silent",
      "php ./storage/setup-boilerplate/after_setup.php"
    ]
  }
}
