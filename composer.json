{
    "name": "fortytwo-studio/craft-cms-boilerplate",
    "description": "This is a boilerplate for Craft CMS",
    "license": "MIT",
    "require": {
        "3w-publishing/craft-chatgpt-integration": "1.0.3",
        "adigital/cookie-consent-banner": "2.0.0",
        "craftcms/aws-s3": "2.0.3",
        "craftcms/cms": "4.4.13",
        "craftcms/redactor": "3.0.4",
        "ether/seo": "4.1.2",
        "solspace/craft-freeform": "4.0.24.1",
        "spicyweb/craft-neo": "3.7.9",
        "verbb/buttonbox": "4.2.0",
        "verbb/navigation": "2.0.17",
        "verbb/super-table": "3.0.9",
        "vlucas/phpdotenv": "^3.4.0",
        "wrav/oembed": "2.3.0"
    },
    "require-dev": {
        "yiisoft/yii2-shell": "^2.0.5"
    },
    "autoload": {
        "psr-4": {
            "modules\\": "modules/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "*": true,
            "craftcms/plugin-installer": true,
            "yiisoft/yii2-composer": true
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-install-cmd": [
            "./craft setup/security-key",
            "./craft setup/app-id",
            "./craft setup/db",
            "./craft db/restore ./storage/setup-boilerplate/default_db.sql",
            "npm install --silent",
            "php ./storage/setup-boilerplate/after_setup.php"
        ]
    }
}
