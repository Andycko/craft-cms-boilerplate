<!DOCTYPE html>
<html lang="en-GB">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="referrer" content="origin-when-cross-origin" />

        {% hook "seo" %}
        {% include '_includes/_global/icons' %}

        <link rel="home" href="{{ siteUrl }}" />

        {#
            Partial: Vite
            ========================================
            Scripts imported by the Vite plugin.
        #}

        {% set scriptAttributes = {} %}
        {% set styleAttributes = {} %}

        {{ craft.vite.script('/src/js/main.js', false, scriptAttributes, styleAttributes) }}

        {% include '_includes/_global/tracking-scripts' %}
    </head>
    {% apply spaceless %}
        <body id="body">

            {% include "_includes/_global/nav.twig" %}

            <main>
                {% block content %}
                {% endblock %}
            </main>

            {% include "_includes/_global/footer.twig" %}
            <!--<svg></svg>-->
        </body>
    {% endapply %}
</html>