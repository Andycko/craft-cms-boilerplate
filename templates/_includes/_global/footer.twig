{% set footerNav = craft.navigation.nodes().handle('footerNavigation').level(1).all() %}

<footer>
    <div class="container text-center text-md-left">
        <div class="row py-4">
            <div class="col-12 col-md-3">
                {% if companyInfo.address | length %}
                    <div class="address">
                        {{ companyInfo.address }}
                    </div>
                {% endif %}
                {% if companyInfo.email | length %}
                    <div class="email">
                        <a href="mailto:{{ companyInfo.email }}" >{{ companyInfo.email }}</a>
                    </div>
                {% endif %}
                {% if companyInfo.phoneNumber | length %}
                    <div class="tel">
                        <a href="tel:{{ companyInfo.phoneNumber }}">{{ companyInfo.phoneNumber }}</a>
                    </div>
                {% endif %}
            </div>
            <div class="col-12 col-md-6 pt-4 pt-md-0 copy">{{ footerDisclaimer.copy }}</div>
            <div class="col-12 col-md-3 footer-nav-links d-flex flex-column align-items-center align-items-md-end pt-4 pt-md-0">
                {% for item in footerNav %}
                    <div class="item px-3">
                        <a href="{{ item.url }}" class="link">{{ item.title }}</a>
                        {% if item.children | length %}
                            <div class="sub-menu">
                                {% for child in item.children.all() %}
                                    <a class="link" href="{{ child.url }}">{{ child.title }}</a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</footer>