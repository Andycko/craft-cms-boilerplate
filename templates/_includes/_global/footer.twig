{% set footerNav = craft.navigation.nodes().handle('footerNavigation').level(1).all() %}
{% set subFooterNav = craft.navigation.nodes().handle('subFooterNavigation').level(1).all() %}

<footer class="bg-black text-white pt-15 pb-10">
	<div class="container mx-auto">
		<div class="lg:flex mb-10 lg:mb-20 text-center">
			{% for item in footerNav %}
				<div class="lg:mr-10 xl:mr-15 lg:mb-0 mb-3">
					<a href="{{ item.url }}" class="link opacity-59 hover:underline">{{ item.title }}</a>
				</div>
			{% endfor %}
		</div>
		<div class="mb-10 lg:mb-15 contact-form lg:text-left text-center lg:grid grid-cols-2 gap-20 items-center">

			<div class="col-span-1 lg:flex lg:mb-0 mb-10">
				{% if companyInfo.address | length %}
					<div class="address opacity-59">
						{{ companyInfo.address }}
					</div>
				{% endif %}
				<div class="lg:ml-5">
					{% if companyInfo.email | length %}
						<div class="email mb-1 opacity-59">
							<a href="mailto:{{ companyInfo.email }}" class="link hover:underline">{{ companyInfo.email }}</a>
						</div>
					{% endif %}
					{% if companyInfo.phoneNumber | length %}
						<div class="tel opacity-59">
							<a href="tel:{{ companyInfo.phoneNumber }}" class="link hover:underline">{{ companyInfo.phoneNumber }}</a>
						</div>
					{% endif %}
				</div>
			</div>

			<div class="col-span-1 form">
				{{ freeform.form('contactForm').render() }}
			</div>
		</div>
