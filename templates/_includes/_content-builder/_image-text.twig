<section class="outer py-10 lg:py-20" style="background-color: {{ block.backgroundColour }}" id="anchor-{{ block.id }}">
	<div class="container mx-auto imageText-block" style="color:{{ block.textColour }}">
		<div class="lg:grid lg:grid-cols-12 lg:gap-10 w-full items-center">
			{% if block.title | length or block.text | length %}
				<div class="md:mb-0 mb-10 lg:col-span-6 {% if block.swapImageText %}order-2{% endif %}">
					{% if block.title | length %}
						<h2 class="mb-4">{{ block.title }}</h2>
					{% endif %}
					{% if block.text | length %}
						<div data-rich-text>{{ block.text }}</div>
					{% endif %}
					{% if block.buttonOrLink.one %}
						<div class="mt-10">
							{% include '/_includes/_content-builder/_partial/buttonOrLink.twig' %}
						</div>
					{% endif %}
				</div>
			{% endif %}

			{% if block.image.one %} 
				<div class="lg:col-span-6 {% if block.swapImageText %}order-1 lg:mt-0 mt-10{% endif %}">
					<img data-src="{{ block.image.one.url({width:830, format:'webp' }) }}" alt="{{ block.image.one.title }}" class="w-full object-cover lazy">
				</div>
            {% else %}
                <div class="lg:col-span-6 {% if block.swapImageText %}order-1 lg:mt-0 mt-10{% endif %}">
                    <img src="https://placehold.co/800x800.jpg" alt="placeholder image" class="w-full object-cover lazy">
                </div>    
			{% endif %}
		</div>
	</div>
</section>