<div class="outer {{ block.backgroundColour }}">
    <div class="container {{ block.topSpacing }} {{ block.bottomSpacing }} video-block">
        {% if block.header %}
            <div class="row pt-5">
                <div class="col-12">
                    <h2>{{ block.header }}</h2>
                </div>
            </div>
        {% endif %}
        {% if block.video.one %}
            <div class="row pt-3 pb-5">
                <div class="col-12">
                    <div class="video-wrapper d-flex justify-content-center align-items-center">
                        {% set vid = block.video.one %}
                        {% if vid.type == 'externalVideo' %}
                            {% if vid.video.media.type == 'video' %}
                                {{ vid.video.render({
                                    params: {
                                        autoplay: 0,
                                        controls: 1,
                                        loop: 0,
                                        mute: 0,
                                    }
                                }) }}
                            {% endif %}
                        {% else %}
                            {% if vid.video.one %}
                                <video src="{{ vid.video.one.url }}" alt="{{ vid.video.one.title }}" controls playsinline></video>
                            {% else %}
                                <video autoplay loop>
                                    <source src="./img/video_placeholder.mp4">
                                </video>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>